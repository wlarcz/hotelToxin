mixin color-palette(colorname, color, textcolor)
    div(class="colors-type__color-palette")
        div(class="colors-type__color")
            svg(width='70', height='70')
                rect(x='0', y='0', width='70', height='70', fill=color, rx='6')
        div(style='display: inline-block; vertical-align: middle;')
            p= colorname
            p= textcolor